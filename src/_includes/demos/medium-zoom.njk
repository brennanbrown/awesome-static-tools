<section id="demo-medium-zoom">
  <h3>medium-zoom</h3>
  <img data-zoom src="https://placehold.co/800x500/png" alt="Zoomable" width="800" height="500" loading="lazy">
  <script src="https://unpkg.com/medium-zoom@1.1.0/dist/medium-zoom.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      if (window.mediumZoom) mediumZoom('#demo-medium-zoom [data-zoom]');
    });
  </script>
</section>
