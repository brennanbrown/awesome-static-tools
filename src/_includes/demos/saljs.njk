<section id="demo-saljs">
  <h3>Sal.js</h3>
  <p class="prose">A tiny scroll animation library that uses the Intersection Observer. Declarative via <code>data-sal</code> attributes.</p>
  <link rel="stylesheet" href="https://unpkg.com/sal.js@0.8.5/dist/sal.css">
  <script src="https://unpkg.com/sal.js@0.8.5/dist/sal.js"></script>
  <div class="grid">
    <div class="card" data-sal="slide-up">Slide up</div>
    <div class="card" data-sal="zoom-in">Zoom in</div>
    <div class="card" data-sal="fade">Fade</div>
  </div>
  <script>document.addEventListener('DOMContentLoaded',()=>window.sal&&sal());</script>
</section>
