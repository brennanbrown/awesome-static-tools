<section id="demo-rough-notation">
  <h3>Rough Notation</h3>
  <p>Annotate elements with a hand-drawn look.</p>
  <p><span id="rn-target">JAMstack</span> keeps things fast.</p>
  <script src="https://unpkg.com/rough-notation/lib/rough-notation.iife.js"></script>
  <script>
    const rn = RoughNotation.annotate(document.getElementById('rn-target'), { type: 'underline', color: '#ef4444' });
    rn.show();
  </script>
</section>
