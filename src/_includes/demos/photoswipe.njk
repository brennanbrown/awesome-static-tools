<section id="demo-photoswipe">
  <h3>PhotoSwipe</h3>
  <link rel="stylesheet" href="https://unpkg.com/photoswipe@5/dist/photoswipe.css">
  <div data-pswp-gallery class="grid">
    <a href="https://placehold.co/1600x1000/png" data-pswp-width="1600" data-pswp-height="1000" class="card">
      <img src="https://placehold.co/800x500/png" alt="Gallery 1" width="800" height="500" loading="lazy">
    </a>
    <a href="https://placehold.co/1600x1000/png" data-pswp-width="1600" data-pswp-height="1000" class="card">
      <img src="https://placehold.co/800x500/png" alt="Gallery 2" width="800" height="500" loading="lazy">
    </a>
  </div>
  <script type="module">
    import PhotoSwipeLightbox from 'https://unpkg.com/photoswipe@5/dist/photoswipe-lightbox.esm.min.js';
    const lightbox = new PhotoSwipeLightbox({
      gallery: '#demo-photoswipe [data-pswp-gallery]', children: 'a',
      pswpModule: () => import('https://unpkg.com/photoswipe@5/dist/photoswipe.esm.min.js')
    });
    lightbox.init();
  </script>
</section>
