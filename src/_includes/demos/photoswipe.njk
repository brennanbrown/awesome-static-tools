<section id="demo-photoswipe">
  <h3>PhotoSwipe</h3>
  <p class="prose">Responsive gallery with pinchâ€‘zoom and swipe on touch devices. Click a thumbnail to open the lightbox. Captions use <code>aria-label</code>.</p>
  <link rel="stylesheet" href="https://unpkg.com/photoswipe@5/dist/photoswipe.css">
  <div data-pswp-gallery class="grid">
    <a href="https://placehold.co/1600x1000/png" data-pswp-width="1600" data-pswp-height="1000" class="card" aria-label="Mountain view at dusk">
      <img src="https://placehold.co/800x500/png" alt="Mountain view at dusk" width="800" height="500" loading="lazy">
    </a>
    <a href="https://placehold.co/1600x1000/png" data-pswp-width="1600" data-pswp-height="1000" class="card" aria-label="City skyline at night">
      <img src="https://placehold.co/800x500/png" alt="City skyline at night" width="800" height="500" loading="lazy">
    </a>
  </div>
  <script type="module">
    import PhotoSwipeLightbox from 'https://unpkg.com/photoswipe@5/dist/photoswipe-lightbox.esm.min.js';
    const lightbox = new PhotoSwipeLightbox({
      gallery: '#demo-photoswipe [data-pswp-gallery]', children: 'a',
      pswpModule: () => import('https://unpkg.com/photoswipe@5/dist/photoswipe.esm.min.js')
    });
    lightbox.init();
  </script>
</section>
