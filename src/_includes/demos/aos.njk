<section id="demo-aos">
  <h3>AOS (Animate On Scroll)</h3>
  <link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css">
  <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
  <div class="grid">
    <div class="card" data-aos="fade-up">Fade up</div>
    <div class="card" data-aos="zoom-in">Zoom in</div>
    <div class="card" data-aos="flip-left">Flip left</div>
  </div>
  <script>document.addEventListener('DOMContentLoaded',()=>window.AOS&&AOS.init({once:true}));</script>
</section>
