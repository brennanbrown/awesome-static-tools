---
layout: layouts/base.njk
title: Web Share API
---
<p>Use the native <code>navigator.share</code> API to share this page.</p>
<button id="shareBtn" class="btn">Share this page</button>
<p id="status" aria-live="polite" style="margin-top:1rem"></p>

{% block scripts %}
<script>
  const btn = document.getElementById('shareBtn');
  const status = document.getElementById('status');
  btn.addEventListener('click', async () => {
    if (!navigator.share) {
      status.textContent = 'Web Share API not supported on this device.';
      return;
    }
    try {
      await navigator.share({
        title: document.title,
        text: 'Check out this demo!',
        url: location.href
      });
      status.textContent = 'Thanks for sharing!';
    } catch (e) {
      status.textContent = 'Share canceled or failed.';
    }
  });
</script>
{% endblock %}
