---
layout: layouts/base.njk
title: AOS
---
<div class="box" data-aos="fade-up">Fade up</div>
<div class="box" data-aos="zoom-in" data-aos-delay="150">Zoom in</div>
<div class="box" data-aos="flip-left" data-aos-delay="300">Flip left</div>
<div class="box" data-aos="slide-right" data-aos-delay="450">Slide right</div>

{% block head %}
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<style>.box{height:120px;border:1px solid #ddd;border-radius:12px;margin:1rem 0;display:flex;align-items:center;justify-content:center}</style>
{% endblock %}

{% block scripts %}
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>AOS.init({ once: true });</script>
{% endblock %}
